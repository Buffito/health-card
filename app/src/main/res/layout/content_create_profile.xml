<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateProfileActivity"
    tools:showIn="@layout/activity_create_profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPersonFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="First Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPersonLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Last Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Date of Birth"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="date" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/editTextCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Country"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPersonalID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Personal ID"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCardID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Card ID"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextVaccineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Vaccine Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextDateVaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Date vaccine given"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic_regular"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="date" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:enabled="true"
            android:text="Next"
            android:fontFamily="@font/century_gothic_regular"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/round_button" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>