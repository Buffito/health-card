<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="170dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textPersonFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="First Name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textPersonLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Last Name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Date of Birth"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Gender"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textCountryISOCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Country ISO Code"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textPersonalID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Personal ID"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textCardID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Card ID"
        android:textAlignment="center"
        android:textSize="20sp" />


</LinearLayout>