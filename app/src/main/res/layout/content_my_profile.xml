<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyProfileFragment"
    tools:showIn="@layout/fragment_my_profile">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_150sdp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/create_fname_hint"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/century_gothic_regular"
        android:paddingBottom="@dimen/_4sdp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/profile_info"
        android:foreground="@drawable/profile_information"
        android:foregroundGravity="center_vertical|center_horizontal|fill"
        android:textColor="@color/black"
        android:fontFamily="@font/century_gothic_regular"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/_4sdp"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <Button
        android:id="@+id/viewQrButton"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/view_qr"
        android:foreground="@drawable/qr_code"
        android:foregroundGravity="center_vertical|center_horizontal|fill"
        android:textColor="@color/black"
        android:fontFamily="@font/century_gothic_regular"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/_4sdp"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/infoButton"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <Button
        android:id="@+id/scanQrButton"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/scan_qr"
        android:foreground="@drawable/scan_qr"
        android:foregroundGravity="center_vertical|center_horizontal|fill"
        android:textColor="@color/black"
        android:fontFamily="@font/century_gothic_regular"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/_4sdp"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoButton" />



    <Button
        android:id="@+id/settingsButton"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/settings"
        android:foreground="@drawable/settings"
        android:foregroundGravity="center_vertical|center_horizontal|fill"
        android:textColor="@color/black"
        android:fontFamily="@font/century_gothic_regular"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/_4sdp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/scanQrButton"
        app:layout_constraintTop_toBottomOf="@+id/viewQrButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
