<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/log_in">
        <SwitchPreferenceCompat
            app:key="fill"
            app:title="@string/auto_fill1"
            android:summary="@string/auto_fill2"/>

        <SwitchPreferenceCompat
            app:dependency="fill"
            app:key="remember"
            app:title="@string/auto_login1"
            android:summary="@string/auto_login2"/>

        <SwitchPreferenceCompat
            app:key="bio"
            app:title="@string/bio_login1"
            android:summary="@string/bio_login2"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/language">
        <ListPreference
            android:entries="@array/lang_array"
            android:entryValues="@array/lang_array"
            android:key="lang"
            android:title="@string/language"
            android:summary="@string/language_sum"/>
    </PreferenceCategory>

</PreferenceScreen>